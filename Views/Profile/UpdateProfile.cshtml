@using BloodDonation.Constants
@model BloodDonation.ViewModels.UpdateProfileVm

@{
    ViewBag.Title = "Update Profile";
}
<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form action="" method="post">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        Update Profile
                    </h5>
                </div>
                <div class="card-body">
                    <fieldset>
                        <legend>
                            Basic Details
                        </legend>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name">Name (*)</label>
                                    <input asp-for="Name" type="text" class="form-control" required>
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="BloodGroup">Blood Group (*)</label>
                                    <select asp-for="BloodGroup" class="form-control" asp-items="BloodGroups.GetSelectList(Model.BloodGroup)" required></select>
                                    <span asp-validation-for="BloodGroup"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="District">District (*)</label>
                                    <select asp-for="District" class="form-control" asp-items="Districts.GetSelectList(Model.District)" required></select>
                                    <span asp-validation-for="District"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactNo">Contact No (*)</label>
                                    <input asp-for="ContactNo" type="text" class="form-control" required>
                                    <span asp-validation-for="ContactNo"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Address">Address</label>
                                    <textarea asp-for="Address"  class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="Address"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Note">Bio</label>
                                    <textarea asp-for="Note"  class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="Note"></span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">
                        <span class="fa fa-check"></span> Change Password
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>